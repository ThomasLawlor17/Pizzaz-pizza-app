<%- include('../partials/header') %>
<h1>CREATE A NEW RESTAURANT</h1>
<br>
<h3>CANNOT BE CHANGED LATER BY USER</h3>
<br>
<div class="new-form">
<form action="/restaurants" method="POST" enctype="multipart/form-data">
    <label>NAME: </label>
    <input type="text" name="name" autocapitalize="characters"><br>
    <label>ADDRESS: </label>
    <input type="text" name="location"><br>
    <label>WEBSITE: </label>
    <input type="url" name="website"><br>
    <label>PRICES: </label>
    <select name="price">
        <option value="$">$</option>
        <option value="$$">$$</option>
        <option value="$$$">$$$</option>
    </select><br>
    <label>ADD IMAGE:</label>
    <input class="add-image" type="file" name="image" id="image" value="Add Image"><br><br>
    <input class="submit-button" type="submit" value="ADD RESTAURANT">
</form>
</div>

<%- include("../partials/footer") %> 